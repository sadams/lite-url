{
  "name": "lite-url",
  "version": "1.0.5",
  "authors": [
    "Sam Adams <adams.sam@gmail.com>"
  ],
  "description": "A small cross-browser JS lib for parsing a URL into its component parts (generally follows Chrome's `new URL(parseThisUrl)` API).",
  "keywords": [
    "url",
    "uri",
    "url parsing"
  ],
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/sadams/lite-url",
  "bugs": "https://github.com/sadams/lite-url/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sadams/lite-url.git"
  },
  "scripts": {
    "test": "run-s test:**",
    "test:lint": "eslint .",
    "test:deps": "npm-check  --ignore '{husky,chai}'",
    "test:as-module": "mocha 'test/node/**/*.js'",
    "test:in-browser": "mocha-headless-chrome -f test/browser/lite-url.test.html",
    "build": "run-s build:*",
    "build:clean": "rm -rf dist; mkdir -p dist",
    "build:lib": "node build.js",
    "precommit": "run-s test"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "mocha-headless-chrome": "^1.8.2",
    "npm-check": "^5.5.2",
    "npm-run-all": "^4.1.2",
    "rollup": "^0.56.4",
    "rollup-plugin-license": "^0.5.0",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
